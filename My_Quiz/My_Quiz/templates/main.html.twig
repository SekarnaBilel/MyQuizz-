{% extends 'base.html.twig' %}

{% block body %}
	<header class="py-3 mb-4 "></header>
	<div class="container">
		<div class="row">

			<h1 class="justify-content-center">{{'MyQuizz'}}</h1>
			<hr>
			{% for category in categorie  %}
				<div class="col-md-6">
					<div class="card mb-3" style="width: 100%;">
						<div class="card-body">
							<img class="card-img-top" src="{{category.img}}" alt="Card image cap">
							<h5 class="card-title">{{category.name}}</h5>
							<a href="categorie/{{ category.id }}" class="btn btn-primary">Do the Quizz</a>
						</div>
					</div>
				</div>
				<br/>
			{% endfor %}

		</div>
	</div>
</div>{% endblock %}
